@using StokTakipMVC.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLMUSTERI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Müşteriler</h2>


<table style="margin-top:15px" class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>MÜŞTERİ AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>BAKİYE</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>

        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.ID</td>
                <td>@mus.AD</td>
                <td>@mus.SOYAD</td>
                <td>@mus.SEHIR</td>
                <td>@mus.BAKIYE</td>
                <td><a href="/Musteri/Sil/@mus.ID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@mus.ID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>

